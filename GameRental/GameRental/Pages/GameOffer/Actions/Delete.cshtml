@page
@model GameRental.Pages.GameOffer.DeleteModel


<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Game offer number @Model.GameOffer.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.GameOffer.Price)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.GameOffer.Price)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.GameOffer.Amount)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.GameOffer.Amount)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.GameOffer.Game.Title)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.GameOffer.Game.Title)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.GameOffer.Game.Genres)
        </dt>
        <dd class="col-sm-8">
            @if (Model.GameOffer.Game.Genres.Any())
            {
                <ul>
                    @foreach (var genre in Model.GameOffer.Game.Genres)
                    {
                        <li>@genre.Name</li>
                    }
                </ul>
            }
            else
            {
                <span>No Genres</span>
            }
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.GameOffer.Owner.Email)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.GameOffer.Owner.Email)
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="GameOffer.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="/GameOffer/Index" class="btn btn-secondary">Back to list</a>
    </form>
</div>
