@model GameRental.Pages.GameLeased.IndexModel


<h1>Leased games</h1>
<a asp-page="/GameLeased/Actions/Create" class="btn btn-primary mb-3">Add game</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Price</th>
            <th>Active</th>
            <th>Game</th>
            <th>Renter</th>
            <th>Game offer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leasedGame in Model.LeasedGames)
        {
            <tr>
                <td>@leasedGame.Id</td>
                <td>@leasedGame.Price</td>
                <td>@leasedGame.Active</td>
                <td>Game</td>
                <td>Renter</td>
                <td>Game offer</td>


               @*  <td>
                    @if (game.Genres.Any())
